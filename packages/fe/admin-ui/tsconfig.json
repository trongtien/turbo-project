{
  "extends": "@bds/typescript-config/tsconfig.react.json",
  "compilerOptions": {
		"baseUrl": ".",
		"rootDirs": [".", "../@bds/theme", "../@bds/design-layout/src"],
		"outDir": "dist",
		"types": [
			"vitest/globals"
		],
    	"noEmit": true,
		"paths": {
			"@admin-ui/*": ["./src/*"],
			"@bds/theme*": ["../@bds/theme*"],
			"@bds/design-layout*": ["../@bds/design-layout/src*"],
		},
		"useUnknownInCatchVariables": false,
		
	},
	"include": ["src/**/*.d.ts", "src/**/*.tsx", "src/**/*.ts", "src/**/*.jsx", "src/**/*.js"]
}
