{
	"extends": "@bds/typescript-config/tsconfig.react.json",
	"compilerOptions": {
		"baseUrl": ".",
        "noEmit": true,
		"rootDirs": [".", "../theme"],
		"outDir": "dist",
		"types": ["vite/client", "vitest/globals"],
		"typeRoots": [
			"./node_modules/@testing-library",
			"./node_modules/@types",
			"../../../../node_modules",
			"../../../../node_modules/@types",
			"./src/module.scss.d.ts",
		],
		"paths": {
			"@bds/design-layout*": ["./src*"],
			"@bds/theme*": ["../theme*"],
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.ts", "src/**/*.jsx", "src/**/*.js"]
}
