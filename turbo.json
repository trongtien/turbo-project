{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "stream",
  "tasks": {
    "watch": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
    "build:fe:admin": {
			"dependsOn": ["project-admin-ui#build"]
		},
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "typecheck": {
			"dependsOn": ["^typecheck"]
		},
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "lint:fe": {
			"dependsOn": [
				"project-admin-ui"
			]
		}
  }
}
